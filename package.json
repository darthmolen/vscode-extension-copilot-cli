{
  "name": "copilot-cli-extension",
  "displayName": "Copilot CLI Extension",
  "description": "Interactive VS Code extension for GitHub Copilot CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-cli-extension.startChat",
        "title": "Copilot CLI: Start Chat Session"
      },
      {
        "command": "copilot-cli-extension.stopChat",
        "title": "Copilot CLI: Stop Chat Session"
      }
    ],
    "configuration": {
      "title": "Copilot CLI",
      "properties": {
        "copilotCLI.cliPath": {
          "type": "string",
          "default": "gh",
          "description": "Path to GitHub CLI executable (gh)"
        },
        "copilotCLI.allowAllTools": {
          "type": "boolean",
          "default": false,
          "description": "Allow all tools without prompting"
        },
        "copilotCLI.allowAllUrls": {
          "type": "boolean",
          "default": false,
          "description": "Allow all URLs without prompting"
        },
        "copilotCLI.yolo": {
          "type": "boolean",
          "default": false,
          "description": "Enable YOLO mode (maximum permissions)"
        },
        "copilotCLI.allowedTools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of allowed tools"
        },
        "copilotCLI.allowedUrls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of allowed URLs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
